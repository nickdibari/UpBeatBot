[Unit]
Description=UpBeatBot service
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=300
User={{ YOUR_USER }}
WorkingDirectory={{ GIT_DIR }}
Environment=LOG_FILE=system.log
ExecStart={{ PYTHON_ENV  }} \
/home/ndibari/development/UpBeatBot/main.py

[Install]
WantedBy=multi-user.target

